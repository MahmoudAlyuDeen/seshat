<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/simple_padding_medium"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/card_view_corner_radius">

        <ImageView
            android:id="@+id/item_book_cover_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_book"
            tools:ignore="ContentDescription"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/book_title_gradient_background"
            android:orientation="vertical"
            android:padding="@dimen/simple_padding_large">

            <TextView
                android:id="@+id/item_book_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/placeholder"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_primary"/>

            <TextView
                android:id="@+id/item_book_author_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/placeholder"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_secondary"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>